<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context="com.shopperapphalanx.Activities.DocumentsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:background="@drawable/cam"
                android:textSize="20dp"

                android:id="@+id/bt_click_adhaar"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_adhaar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit Your ADHAAR"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#444444"
                android:gravity="center"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:background="@android:color/darker_gray" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:background="@drawable/cam"
                android:textSize="20dp"
                android:id="@+id/bt_click_vlicence"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_vlicence"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit Your Vehicle Licence"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#444444"
                android:gravity="center"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:background="@android:color/darker_gray" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:background="@drawable/cam"
                android:textSize="20dp"
                android:id="@+id/bt_click_dlicence"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_dlicence"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit Your Driving Licence"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#444444"
                android:gravity="center"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:background="@android:color/darker_gray" />


            <Button
                android:id="@+id/bt_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit" />

        </LinearLayout>


    </ScrollView>


</LinearLayout>


