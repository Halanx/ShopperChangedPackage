<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.shopperapphalanx.Activities.OnWayStoreActivity">

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/progressBar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/batch">
        <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Batch No : "
            android:textSize="25dp"
            android:textColor="#313131"
            android:layout_weight="1"
        android:layout_alignParentTop="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text=" "
            android:id="@+id/batchno"
            android:textSize="25dp"
            android:textColor="#313131"
            android:layout_alignParentTop="true"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_below="@id/batch"
        android:layout_weight="1"

        android:layout_marginBottom="48dp"
        android:id="@+id/rv_batches">

    </android.support.v7.widget.RecyclerView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#fdfdfd"
        app:contentPadding="-2dp"
        android:layout_alignParentBottom="true"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="3dp"
        app:cardElevation="5dp"
        android:id="@+id/cv_complete_pickup">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@color/colorAccent"
            android:text="Pick up Completed"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#f5f5f5"
            android:id="@+id/pickup"
            android:gravity="center" />

x


    </android.support.v7.widget.CardView>

</RelativeLayout>
